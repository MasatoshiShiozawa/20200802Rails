<p id="notice"><%= notice %></p>

<h1>マイつぶやき</h1>

<%= form_with(model: @tsubuyaki, local: true) do |form| %>
  <div class="tsubuyaki_content">
    <%= form.label :今どうしてる？ %>
    <%= form.text_area :content %>
  </div>
  <div class="actions">
    <%= form.submit value="つぶやく"%>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th colspan="3">つぶやき一覧</th>
    </tr>
  </thead>

  <tbody>
    <% @tsubuyakis.each do |tsubuyaki| %>
      <tr>
        <td><%= tsubuyaki.content %></td>
        <td><%= link_to '編集', edit_tsubuyaki_path(tsubuyaki) %></td>
        <td><%= link_to '削除', tsubuyaki, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
